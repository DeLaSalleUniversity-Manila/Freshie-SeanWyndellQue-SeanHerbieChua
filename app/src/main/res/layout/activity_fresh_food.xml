<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wynsean.freshie.FreshFoodActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fresh Food"
        android:id="@+id/textViewFreshFood"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="#33b033"
        android:elevation="4dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageViewCart"
        android:src="@drawable/shoppingcart"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/textViewFreshFood"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="onClickCart"
        android:elevation="4dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/micButton"
        android:layout_alignBottom="@+id/imageViewCart"
        android:src="@drawable/mic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:clickable="true"
        android:onClick="onClickMic"
        android:elevation="4dp"/>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_below="@+id/textViewFreshFood"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
