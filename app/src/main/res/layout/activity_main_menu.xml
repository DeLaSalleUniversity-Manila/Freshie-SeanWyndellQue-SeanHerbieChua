<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Freshie"
        android:id="@+id/imageViewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="#33b033"
        android:elevation="4dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewTitle"
        android:background="#fafafa"
        android:id="@+id/frameLayout">

        <GridView
            android:id="@+id/gridviewCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:numColumns="2" />
    </FrameLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageViewCart"
        android:src="@drawable/shoppingcart"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/imageViewTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="onClickCart"
        android:elevation="4dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/micButton"
        android:layout_alignBottom="@+id/imageViewCart"
        android:src="@drawable/mic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:clickable="true"
        android:onClick="onClickMic"
        android:elevation="4dp"/>


</RelativeLayout>
